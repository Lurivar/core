<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="api.test" path="/api">
        <default key="_controller">Thelia\Controller\Api\IndexController::indexAction</default>
        <default key="not-logged">1</default>
    </route>

    <!-- customer routes -->
    <route id="api.customer.list" path="/api/customers" methods="get">
        <default key="_controller">Thelia\Controller\Api\CustomerController::listAction</default>
    </route>

    <route id="api.customer.get" path="/api/customers/{customer_id}" methods="get">
        <default key="_controller">Thelia\Controller\Api\CustomerController::getCustomerAction</default>
        <requirement key="customer_id">\d+</requirement>
    </route>

    <route id="api.customer.create" path="/api/customers" methods="post">
        <default key="_controller">Thelia\Controller\Api\CustomerController::createCustomerAction</default>
    </route>

    <route id="api.customer.update" path="/api/customers/{customer_id}" methods="put">
        <default key="_controller">Thelia\Controller\Api\CustomerController::updateCustomerAction</default>
        <requirement key="customer_id">\d+</requirement>
    </route>

    <route id="api.customer.delete" path="/api/customers/{customer_id}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\CustomerController::deleteCustomerAction</default>
        <requirement key="customer_id">\d+</requirement>
    </route>

    <!-- end customer route -->
    <!-- title route -->
    <route id="api.title.list" path="/api/title" methods="get">
        <default key="_controller">Thelia\Controller\Api\TitleController::listAction</default>
    </route>

    <route id="api.title.get" path="/api/title/{title_id}" methods="get">
        <default key="_controller">Thelia\Controller\Api\TitleController::getTitleAction</default>
        <requirement key="title_id">\d+</requirement>
    </route>

</routes>
