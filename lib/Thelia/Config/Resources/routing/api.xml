<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="api.test" path="/api">
        <default key="_controller">Thelia\Controller\Api\IndexController::indexAction</default>
        <default key="not-logged">1</default>
    </route>

    <!-- customer routes -->
    <route id="api.customer.list" path="/api/customers" methods="get">
        <default key="_controller">Thelia\Controller\Api\CustomerController::listAction</default>
    </route>

    <route id="api.customer.get" path="/api/customers/{customer_id}" methods="get">
        <default key="_controller">Thelia\Controller\Api\CustomerController::getCustomerAction</default>
        <requirement key="customer_id">\d+</requirement>
    </route>

    <route id="api.customer.create" path="/api/customers" methods="post">
        <default key="_controller">Thelia\Controller\Api\CustomerController::createCustomerAction</default>
    </route>

    <route id="api.customer.update" path="/api/customers/{customer_id}" methods="put">
        <default key="_controller">Thelia\Controller\Api\CustomerController::updateCustomerAction</default>
        <requirement key="customer_id">\d+</requirement>
    </route>

    <route id="api.customer.delete" path="/api/customers/{customer_id}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\CustomerController::deleteCustomerAction</default>
        <requirement key="customer_id">\d+</requirement>
    </route>

    <!-- end customer route -->

    <!-- title route -->
    <route id="api.title.list" path="/api/title" methods="get">
        <default key="_controller">Thelia\Controller\Api\TitleController::listAction</default>
    </route>

    <route id="api.title.create" path="/api/title" methods="post">
        <default key="_controller">Thelia\Controller\Api\TitleController::createAction</default>
    </route>

    <route id="api.title.update" path="/api/title" methods="put">
        <default key="_controller">Thelia\Controller\Api\TitleController::updateAction</default>
    </route>

    <route id="api.title.get" path="/api/title/{entityId}" methods="get">
        <default key="_controller">Thelia\Controller\Api\TitleController::getAction</default>
        <requirement key="entityId">\d+</requirement>
    </route>

    <route id="api.title.delete" path="/api/title/{entityId}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\TitleController::deleteAction</default>
        <requirement key="entityId">\d+</requirement>
    </route>
    <!-- end title route -->

    <!-- product route -->
    <route id="api.product.list" path="/api/products" methods="get">
        <default key="_controller">Thelia\Controller\Api\ProductController::listAction</default>
    </route>

    <route id="api.product.get" path="/api/products/{product_id}" methods="get">
        <default key="_controller">Thelia\Controller\Api\ProductController::getProductAction</default>
        <requirement key="product_id">\d+</requirement>
    </route>

    <route id="api.product.update" path="/api/products/{product_id}" methods="put">
        <default key="_controller">Thelia\Controller\Api\ProductController::updateAction</default>
        <requirement key="product_id">\d+</requirement>
    </route>

    <route id="api.product.create" path="/api/products" methods="post">
        <default key="_controller">Thelia\Controller\Api\ProductController::createAction</default>
    </route>

    <route id="api.product.delete" path="/api/products/{product_id}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\ProductController::deleteAction</default>
        <requirement key="product_id">\d+</requirement>
    </route>
    <!-- end product route -->

    <!-- product image route -->
    <route id="api.product.image.list" path="/api/products/{entityId}/images" methods="get">
        <default key="_controller">Thelia\Controller\Api\ImageController::listAction</default>
        <default key="entity">Product</default>
        <requirement key="entityId">\d+</requirement>
    </route>

    <route id="api.product.image.get" path="/api/products/{entityId}/images/{imageId}" methods="get">
        <default key="_controller">Thelia\Controller\Api\ImageController::getImageAction</default>
        <default key="entity">Product</default>
        <requirement key="entityId">\d+</requirement>
        <requirement key="imageId">\d+</requirement>
    </route>

    <route id="api.product.image.delete" path="/api/products/{entityId}/images/{imageId}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\ImageController::deleteImageAction</default>
        <default key="entity">Product</default>
        <requirement key="entityId">\d+</requirement>
        <requirement key="imageId">\d+</requirement>
    </route>

    <route id="api.product.image.create" path="/api/products/{entityId}/images" methods="post">
        <default key="_controller">Thelia\Controller\Api\ImageController::createImageAction</default>
        <default key="entity">Product</default>
        <requirement key="entityId">\d+</requirement>
    </route>

    <!-- end product image route -->

    <!-- product sale elements route -->
    <route id="api.product.pse.list" path="/api/pse/product/{productId}" methods="get">
        <default key="_controller">Thelia\Controller\Api\ProductSaleElementsController::listAction</default>
        <requirement key="productId">\d+</requirement>
    </route>

    <route id="api.product.pse.get" path="/api/pse/{pseId}" methods="get">
        <default key="_controller">Thelia\Controller\Api\ProductSaleElementsController::getPseAction</default>
        <requirement key="pseId">\d+</requirement>
    </route>

    <route id="api.product.pse.delete" path="/api/pse/{pseId}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\ProductSaleElementsController::deleteAction</default>
        <requirement key="pseId">\d+</requirement>
    </route>

    <route id="api.product.pse.create" path="/api/pse" methods="post">
        <default key="_controller">Thelia\Controller\Api\ProductSaleElementsController::createAction</default>
        <requirement key="productId">\d+</requirement>
    </route>

    <route id="api.product.pse.update" path="/api/pse/{pseId}" methods="put">
        <default key="_controller">Thelia\Controller\Api\ProductSaleElementsController::updateAction</default>
        <default key="pseId">\d+</default>
    </route>

    <!-- end product sale elements route -->

    <!-- category route -->
    <route id="api.category.list" path="/api/categories" methods="get">
        <default key="_controller">Thelia\Controller\Api\CategoryController::listAction</default>
    </route>

    <route id="api.category.get" path="/api/categories/{entityId}" methods="get">
        <default key="_controller">Thelia\Controller\Api\CategoryController::getAction</default>
        <requirement key="entityId">\d+</requirement>
    </route>

    <route id="api.category.create" path="/api/categories" methods="post">
        <default key="_controller">Thelia\Controller\Api\CategoryController::createAction</default>
    </route>

    <route id="api.category.update" path="/api/categories" methods="put">
        <default key="_controller">Thelia\Controller\Api\CategoryController::updateAction</default>
    </route>

    <route id="api.category.delete" path="/api/categories/{entityId}" methods="delete">
        <default key="_controller">Thelia\Controller\Api\CategoryController::deleteAction</default>
        <requirement key="entityId">\d+</requirement>
    </route>

    <!-- end category route -->

    <!-- tax rule route -->

    <route id="api.tax-rule.list" path="/api/tax-rules" methods="get">
        <default key="_controller">Thelia\Controller\Api\TaxRuleController::listAction</default>
    </route>

    <route id="api.tax-rule.get" path="/api/tax-rules/{taxRuleId}" methods="get">
        <default key="_controller">Thelia\Controller\Api\TaxRuleController::getAction</default>
        <requirement key="taxRuleId">\d+</requirement>
    </route>
    <!-- end tax rule -->
</routes>
